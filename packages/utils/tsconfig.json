{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["dom", "es7"],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "dist",
    "declarationDir": "dist",
    "sourceMap": true,
    "strict": false,
    "target": "es6"
  },
  "exclude": [
    "node_modules"
  ]
}
