{
  "extends": "@istanbuljs/nyc-config-babel",
  "check-coverage": true,
  "reporter": ["html", "lcov", "text", "text-summary"],
  "report-dir": "coverage",
  "include": [
    "packages/*/dist/**/*.js",
    "packages/*/src/**/*.ts"
  ],
  "extension": [
    ".js",
    ".ts"
  ],
  "exclude": [
    "**/test"
  ]
}
